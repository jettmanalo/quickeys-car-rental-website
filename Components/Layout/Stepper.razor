            Booking <span class="hidden sm:inline-flex sm:ms-2">Info</span>
        </span>
    </li>
    <li class="@((Step >= 2) ? "text-blue-500" : "") flex md:w-full items-center after:content-[''] after:w-full after:h-1 after:border-b after:border-gray-700 after:border-1 after:hidden sm:after:inline-block after:mx-6 xl:after:mx-10">
        <span class="flex items-center after:content-['/'] sm:after:hidden after:mx-2 after:text-gray-500">
            @if (Step >= 2)
            {
                <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 me-2.5" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
                </svg>
            }
            else
            {
                <span class="me-2">2</span>
            }
            Car <span class="hidden sm:inline-flex sm:ms-2">Selection</span>
        </span>
    </li>
    <li class="@((Step == 3) ? "text-blue-500" : "") flex items-center">
        @if (Step == 3)
        {
            <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 me-2.5" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
            </svg>
        }
        else
        {
            <span class="me-2">3</span>
        }
        Personal <span class="hidden sm:inline-flex sm:ms-2">Details</span>
    </li>
</ol>

@code {

    [Parameter]
