<ol class="flex items-center max-w-screen-sm text-sm font-medium text-center text-gray-400 sm:text-base mx-5 md:mx-auto mt-32 mb-8">
    <li class="flex md:w-full items-center text-blue-500 sm:after:content-[''] after:w-full after:h-1 after:border-b after:border-gray-700 after:border-1 after:hidden sm:after:inline-block after:mx-6 xl:after:mx-10">
        <span class="flex items-center after:content-['/'] sm:after:hidden after:mx-2 after:text-gray-500">
            <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 me-2.5" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
